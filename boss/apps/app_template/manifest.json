{
    "name": "Enhanced App Template",
    "version": "2.0.0",
    "description": "Enhanced template demonstrating Rich backend support with graceful fallback to Pillow. Shows best practices for cross-backend compatibility.",
    "author": "BOSS Development Team",
    "hardware_requirements": [],
    "preferred_screen_backend": "auto",
    "categories": [
        "template",
        "development",
        "demo"
    ],
    "entry_point": "main.py",
    "dependencies": [],
    "configuration": {
        "backend_detection": true,
        "graceful_degradation": true
    },
    "permissions": [
        "screen",
        "leds",
        "buttons"
    ],
    "timeout_seconds": 120,
    "features": {
        "rich_support": true,
        "pillow_fallback": true,
        "cross_backend_compatibility": true
    },
    "examples": {
        "rich_features": [
            "tables",
            "progress",
            "panels",
            "trees",
            "code"
        ],
        "basic_features": [
            "text",
            "colors",
            "alignment",
            "multi_line"
        ]
    }
}